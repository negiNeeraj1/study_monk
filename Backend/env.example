# ========================================
# AI-PSM Study Material System
# Environment Configuration
# ========================================

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
PORT=5000
HOST=localhost

# ========================================
# DATABASE CONFIGURATION
# ========================================
MONGODB_URI=mongodb://localhost:27017/study-ai
MONGO_URI=mongodb://localhost:27017/study-ai
# For MongoDB Atlas (uncomment and configure):
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# ========================================
# JWT CONFIGURATION
# ========================================
JWT_SECRET=your_super_secret_jwt_key_for_study_ai_app_2024_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_ISSUER=study-ai-app
JWT_AUDIENCE=study-ai-users

# ========================================
# AI API KEYS
# ========================================
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# ========================================
# FRONTEND URLs
# ========================================
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001
VITE_API_URL=http://localhost:5000/api

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,ppt,pptx,txt,jpg,jpeg,png,gif

# ========================================
# SECURITY CONFIGURATION
# ========================================
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_here
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
AUTH_RATE_LIMIT_WINDOW_MS=900000

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ENABLE_REQUEST_LOGGING=true

# ========================================
# EMAIL CONFIGURATION (for future use)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@study-ai.com

# ========================================
# REDIS CONFIGURATION (for caching, optional)
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# MONITORING & ANALYTICS
# ========================================
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# ========================================
# PRODUCTION OVERRIDES
# ========================================
# Uncomment and configure for production:
# NODE_ENV=production
# PORT=5000
# HOST=0.0.0.0
# JWT_SECRET=your_production_jwt_secret_here
# MONGODB_URI=your_production_mongodb_uri
# FRONTEND_URL=https://yourdomain.com
# ADMIN_URL=https://admin.yourdomain.com
# CORS_ORIGIN=https://yourdomain.com,https://admin.yourdomain.com
